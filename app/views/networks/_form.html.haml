= form_for @network do |f|
  - if @network.errors.any?
    #error_explanation
      %h2= "#{pluralize(@network.errors.count, "error")} prohibited this network from being saved:"
      %ul
        - @network.errors.full_messages.each do |message|
          %li= message
  %table.table.mt-3
    %tr
      %td= f.label :network_name
      %td= f.text_field :network_name, class: 'form-control'
    %tr
      %td= f.label :chain_id
      %td= f.number_field :chain_id, class: 'form-control'
    %tr
      %td= f.label :scan_url
      %td= f.text_area :scan_url, rows: 5, class: 'form-control'
    %tr
      %td= f.label :active
      %td= f.check_box :active, {}, 'true', 'false'
  .actions.mt-2.mb-2
    = f.submit 'Save'
