!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title WalletManagement
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all'
    %link{rel: 'stylesheet', media: 'all', href: 'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'}
    %link{rel: 'stylesheet', media: 'all', href: 'https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.31.3/css/theme.default.min.css'}
    = javascript_pack_tag 'application'
    %script{src: 'https://code.jquery.com/jquery-2.2.4.min.js'}
    %script{src: 'https://cdnjs.cloudflare.com/ajax/libs/jquery-ujs/1.2.3/rails.min.js'}
    %script{src: 'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js'}
    %script{src: 'https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.31.3/js/jquery.tablesorter.min.js'}
  %body
    %header.mb-5
      .navbar.navbar-dark.bg-dark.shadow-sm
        .container.d-flex.justify-content-between
          %a.navbar-brand.d-flex.align-items-center{:href => root_path}
            %strong Wallets
          - if user_signed_in?
            %span{style: 'color: white'}
              = current_user.email
            = button_to "Logout", destroy_user_session_path, method: :delete
    %main{:role => "main"}
      %section.jumbotron
        .container
          = yield

:javascript
  $(function() {
    $('table').tablesorter()
  })

:css
  .tablesorter-default {
    font-size: 16px;
    font-family: system-ui;
  }
  .tablesorter-default td {
    padding: 0.7rem 0.7rem;
  }
  .tablesorter-default th {
    padding: 0.7rem 0.7rem !important;
    border-bottom: #000 2px solid;
  }
